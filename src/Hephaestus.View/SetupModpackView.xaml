<UserControl
    x:Class="Hephaestus.View.SetupModpackView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hephaestus.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    DataContext="{Binding SetupModpackViewModel, Source={StaticResource ViewModelLocator}}"
    FontFamily="{DynamicResource ProductSans}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <Grid Margin="40,10">
        <Grid Grid.Column="0" Background="White">
            <Grid Margin="40,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width=".5*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0" Margin="10">
                        <Label FontSize="30" FontWeight="Bold">ModOrganizer.exe Path</Label>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                Grid.Column="0"
                                FontFamily="{DynamicResource RobotoMono}"
                                FontSize="15"
                                IsEnabled="True"
                                Text="{Binding ModOrganizerExePath, UpdateSourceTrigger=PropertyChanged}" />
                            <Button
                                Grid.Column="1"
                                Margin="10,-10"
                                materialDesign:RippleAssist.Feedback="Black"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Command="{Binding OpenDirectoryBrowserCommand}"
                                Foreground="{DynamicResource MaterialDesignBody}"
                                Style="{DynamicResource MaterialDesignFloatingActionMiniAccentButton}">
                                <materialDesign:PackIcon Kind="Folder" />
                            </Button>
                        </Grid>
                    </StackPanel>
                    <TextBlock
                        Grid.Column="1"
                        FontFamily="{DynamicResource RobotoMono}"
                        TextWrapping="Wrap">
                        The executable location of the Mod Organizer instance you wish to import your mod list from.
                    </TextBlock>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width=".5*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="1" Margin="10">
                        <Label FontSize="30" FontWeight="Bold">Mod Organizer Profile</Label>
                        <ComboBox
                            FontFamily="{DynamicResource RobotoMono}"
                            FontSize="15"
                            ItemsSource="{Binding ModOrganizerProfiles}" />
                    </StackPanel>
                    <TextBlock
                        Grid.Column="1"
                        FontFamily="{DynamicResource RobotoMono}"
                        TextWrapping="Wrap">
                        The Mod Organizer profile with your configurated DEFAULT/CORE mod list. This should contain all REQUIRED mods, and omit all OPTIONAL mods.
                    </TextBlock>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width=".5*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="2" Margin="10">
                        <Label
                            materialDesign:HintAssist.Hint="Paste the Mod Organizer .CSV data here."
                            FontSize="30"
                            FontWeight="Bold">
                            .CSV Dump
                        </Label>
                        <TextBox
                            Height="150"
                            VerticalAlignment="Stretch"
                            FontFamily="{DynamicResource RobotoMono}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <TextBlock
                        Grid.Column="1"
                        FontFamily="{DynamicResource RobotoMono}"
                        TextWrapping="Wrap">
                        PLACE .GIF HERE
                    </TextBlock>
                </Grid>
            </Grid>

            <Button
                Margin="0,0,10,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding ContinueImportCommand}"
                FontSize="17">
                Next
            </Button>

        </Grid>
    </Grid>

</UserControl>
